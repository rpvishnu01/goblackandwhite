<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                    <span>Shop</span>
                </div>
            </div>
        </div>
    </div>
</div>





<!-- Breadcrumb End -->

<!-- Shop Section Begin -->

<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="shop__sidebar">
                    <form id="filter" method="post" class="filter-form">
                        <article class="filter-group">
                            <header class="card-header">

                                <h6 class="title">Category Types</h6>

                            </header>

                            <div class="filter-content collapse show" id="collapse_2" style="">
                                <div class="card-body">
                                    <a href="/shop">All categories</a>
                                    {{#each category}}

                                    <label class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input"
                                            value="{{this.CategoryName}}" name="category">
                                        <div class="custom-control-label">{{this.CategoryName}}
                                        </div>
                                    </label>
                                    {{/each}}
                                    <label class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" name="category" value=""
                                            hidden checked>

                                    </label>

                                </div>

                            </div>
                        </article>

                        <article class="filter-group">
                            <header class="card-header">

                                <h6 class="title">Price range </h6>

                            </header>

                            <div class="filter-content collapse show" id="collapse_2" style="">
                                <div class="card-body">

                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="2000" name="Prize">
                                        <div class="custom-control-label">Under 2000
                                        </div>
                                    </label>

                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="3000" name="Prize">
                                        <div class="custom-control-label">Under 3000
                                        </div>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="4000" name="Prize">
                                        <div class="custom-control-label">Under 4000
                                        </div>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="5000" name="Prize">
                                        <div class="custom-control-label">Under 5000
                                        </div>
                                    </label>

                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="6000" name="Prize">
                                        <div class="custom-control-label">under 6000
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </article>
                        <article class="filter-group">
                            <header class="card-header">
                                <h6 class="title"> shop by size </h6>
                            </header>
                            <div class="filter-content collapse show" id="collapse_2" style="">
                                <div class="card-body">
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="S" name="size">
                                        <div class="custom-control-label">S
                                        </div>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="M" name="size">
                                        <div class="custom-control-label">M
                                        </div>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="L" name="size">
                                        <div class="custom-control-label">L
                                        </div>
                                    </label>

                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="XL" name="size">
                                        <div class="custom-control-label">XL
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </article>
                        <article class="filter-group">
                            <header class="card-header">
                                <h6 class="title">Blacks & Whites </h6>
                            </header>
                            <div class="filter-content collapse show" id="collapse_2" style="">
                                <div class="card-body">
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="Black" name="color">
                                        <div class="custom-control-label">Blacks
                                        </div>
                                    </label>
                                    <label class="custom-control custom-checkbox">
                                        <input type="radio" class="custom-control-input" value="White" name="color">
                                        <div class="custom-control-label">Whites
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </article>
                    </form>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="row" id="prDetails">
                    {{#if pr}}
                    {{#each pr}}
                    <div class="col-lg-4 col-md-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg">
                                <a href="/product-details/{{this._id}}"> <img class="inner-img"
                                        src="/product-images/{{Images.[0].filename}}" alt=""></a>

                                {{#if this.Stock}}

                                <div class="label new">OUT OF STOKE</div>
                                {{else}}
                                {{!-- <ul class="product__hover   bw__controls">
                                    <li><button onclick="addToCart('{{this._id}}')" class="btn_one mb-2"> ADD TO <span
                                                class="icon_bag_alt"></span></button></li>
                                    <li><button onclick="addToWishlist('{{this._id}}')" class="btn_one">ADD TO <span
                                                class="icon_heart_alt"></span></button></li>

                                </ul> --}}
                                <div class="bw__controls">
                                    <button onclick="addToCart('{{this._id}}')" class="btn_one mb-2"> ADD TO
                                        CART</button>
                                    <button onclick="addToWishlist('{{this._id}}')" class="btn_one"> ADD TO
                                        WISHLIST</button>
                                </div>
                                {{/if}}
                            </div>

                            {{!-- <div class="product__item__pic set-bg"
                                data-setbg="/product-images/{{Images.[0].filename}}">
                            </div> --}}
                            <div class="product__item__text">
                                <h6><a href="#">{{this.ProductName}}</a></h6>
                                <div class="product__price">{{this.Price}}</div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/if }}
                    {{#if Empty}}
                    <a href=""><img src="/user/img/empty/nor.jpg" alt="Colorlib logo" class="mb-2"
                            style="margin: 0 auto; display: block;  margin-top: 5%;"></a>

                    <h4 style="text-align:center; ">Oops!!! We will add products soon...</h4>
                    <div class="form mt-4" style="padding:0px;">
                        <a href="/shop"> <button>RESET FILTER</button> </a>
                    </div>


                    {{/if}}

                    <div class="col-lg-12 text-center">
                        <div class="pagination__option">
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#"><i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Section End -->






