<script>
    $('input[name=category]').change(function () {

        $.ajax({
            url: '/search-filter',
            method: "post",
            data: $('#filter').serialize(),
            success: (isResult) => {
                if (isResult) {
                    $('#prDetails').load(location.href + " #prDetails");
                }
            }
        })

    });
