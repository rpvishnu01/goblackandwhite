<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>

                            <tr>
                                <th>PRODUCTS</th>
                                <th>PRICE</th>
                                <th>ACTION</th>
                                {{!-- <th>Total</th> --}}
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each wishlistItems.WishlistItems}}
                            <tr>
                                <td class="cart__product__item">
                                    <img src="/product-images/{{Product_id.Images.[0].filename}}" alt=""
                                        style="width:100px ;height:100px">
                                    <div class="cart__product__item__title">
                                        <h6> {{Product_id.ProductName}}</h6>
                                        <p>{{Product_id.About}}</p>
                                        <div class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__price">{{Product_id.Price}}</td>
                                <td>
                                    <button class="btn btn-default btn-circle mr-2" onclick="addToCart('{{
                                         Product_id._id}}')"><i class="fa-solid fa-cart-plus"></i></button>



                                    <button class="btn btn-default btn-circle mr-2"
                                        onclick="removeProductFromWishlist('{{this._id}}')">x</button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
