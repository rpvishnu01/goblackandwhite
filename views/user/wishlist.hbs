<script>
    function changeQuantity(cartid, proId, Quantity, count) {
        $.ajax({
            url: '/change-product-quantity',
            data: {
                cartid: cartid,
                product: proId,
                Quantity: Quantity,
                count: count,
            }, method: 'post',
            success: (response) => {

                console.log(response)
                if (response.removeProduct) {
                    alert("product removed")
                    location.reload();
                } else {

                    location.reload();
                }



            }
        })
    } 
</script>


<script>
    function removeProductFromWishlist(wishlistid) {
        $.ajax({
            url: '/removeWishlist',
            data: {
                wishlistid: wishlistid
            }, method: 'post',
            success: (response) => {
                alert("product removed from wishlist")
                location.reload();

            }
        })
    }
</script>