<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                    <span>Account Settings</span>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 col-xl-7">
                <div class="card">
                    <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                style="width: 150px; z-index: 1">
                            <a href="/edit-profile" class="btn btn-dark" data-mdb-ripple-color="dark"
                                style="z-index: 1;">
                                Edit profile
                            </a>
                        </div>
                        <div class="ms-3" style="margin-top: 130px;">
                            <h5>{{user.FirstName}} {{user.LastName}} </h5>

                            <p>{{user.Email}}</p>
                        </div>
                    </div>
                    <div class="p-5  text-black" style="background-color: #f8f9fa;">

                    </div>
                    <div class="card-body p-4 text-black">
                        <div class="mb-5">
                            <p class="lead fw-normal mb-1">Address Settings</p>
                            <div class="p-4" style="background-color: #f8f9fa;">
                                {{!-- <p class="font-italic mb-1">Web Developer</p>
                                <p class="font-italic mb-1">Lives in New York</p>
                                <p class="font-italic mb-0">Photographer</p> --}}






                                {{#each address.AddressList}}
                                <h6 class="address__link"> {{this.FirstName}} {{this.LastName}}, {{this.Address}},
                                    {{this.Town}},
                                    {{this.State}}, {{this.Pin}}, {{this.Mob}}, {{this.Email}}
                                </h6>
                                {{/each}}

                                <div class="ms-4 mt-5 d-flex flex-column  mx-auto">

                                    <a href="/add-new-address" class="btn btn-dark" data-mdb-ripple-color="dark"
                                        style="z-index: 1;">
                                        Address Settings
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-8">

                            </div>
                        </div>


                        <div class="mb-5">
                            <p class="lead fw-normal mb-1">Orders</p>
                            <div class="p-4" style="background-color: #f8f9fa;">

                                <div class="ms-4 mt-5 d-flex flex-column  mx-auto">

                                    <a href="/order-details" class="btn btn-dark" data-mdb-ripple-color="dark"
                                        style="z-index: 1;">
                                        view Orders
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-8">

                            </div>
                        </div>


                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0">Liked</p>
                            <p class="mb-0"><a href="#!" class="text-muted">Show all</a></p>
                        </div>
                        <div class="row g-2">
                            {{#each wishlistItems.WishlistItems}}
                            <div class="col mb-2">
                                <img src="/product-images/{{Product_id.Images.[0].filename}}" alt="image 1"
                                    class="w-100 rounded-3">
                                <div class="bw__controls">
                                    <button onclick="addToCart('{{
                                         Product_id._id}}')" class="btn_one mb-2"> ADD TO
                                        CART</button>

                                </div>
                            </div>
                            {{/each}}
                        </div>

                    </div>





























                </div>
            </div>
        </div>
    </div>
</section>














