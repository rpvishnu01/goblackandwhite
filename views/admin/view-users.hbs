


<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-12 p-md-0">
                <div class="welcome-text">
                    <h4>All Users</h4>
                </div>

            </div>
        </div>
        <!-- row -->
        <div class="row">

            <div class="col-lg-12">





                <table class="table table-bordered verticle-middle table-responsive-sm" id="user_table">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email id</th>
                            <th scope="col">Mob No</th>
                            <th scope="col">signed Date</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.FirstName}}</td>
                            <td>{{this.LastName}}</td>

                            <td>{{this.Email}}</td>
                            <td>{{this.MobNo}}</td>
                            <td>{{this.Date}}</td>
                            <td>
                                <div id="refresh" onClick="refreshPage()">
                                    {{#if block}}
                                    <a onclick="unBlockUser('{{this._id}}')" class="btn btn-success active"
                                        role="button" data-bs-toggle="button" aria-pressed="true">Unblock</a>
                                    {{else}}
                                    <a onclick="blockUser('{{this._id}}')" class="btn btn-danger" role="button"
                                        data-bs-toggle="button">block</a>
                                    {{/if}}
                                </div>
                                {{!-- <a href="/admin/block-user/{{this._id}}" class="btn btn-success"
                                    data-toggle="tooltip" data-placement="top" title="Delete">
                                    Block
                                </a> --}}
                                </span>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>



            </div>
        </div>
   </div>
   </div>
 


        <script>
            function unBlockUser(userId) {
                $.ajax({
                    url: '/admin/unBlockUser/' + userId,
                    method: 'get',
                    success: (response) => {
                        location.reload()
                    }
                })
            }
        </script>

        <script>
            function blockUser(userId) {
                $.ajax({
                    url: '/admin/blockUser/' + userId,
                    method: 'get',
                    success: (response) => {
                        location.reload()
                    }
                })
            }
        </script>

       <script>
       $(document).ready( function () {
  
  
          $('#user_table').wrap('<div id="hide" style="display:none"/>');
   
         $('#hide').css( 'display', 'block' );
     } );
      

         var table = $('#user_table').DataTable();
       </script>