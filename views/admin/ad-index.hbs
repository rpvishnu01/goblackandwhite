<script>
    var xValues = ["Placed", "Shipped", "Deliverd", "Cancelled"];
    var yValues = [{{statusData}}];
    var barColors = ["red", "green", "blue", "orange", "brown"];

    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "Total product sale Status"
            }
        }
    });
</script>








