

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-12 p-md-0">
                <div class="welcome-text">
                    <h4>Product List</h4>
                </div>
                 
            </div>
        </div>
        <!-- row -->
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        {{!-- <h4 class="card-title">Bordered Table</h4> --}}
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                            <table class="table table-bordered verticle-middle table-responsive-sm" id="productTable">
                                <thead>
                                    <tr>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Price</th>
                                       
                                        <th scope="col">About</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                      {{#each product}}
                                    <tr>
                                        <td>{{this.ProductName}}</td>
                                        <td>{{this.Price}}</td>
                                       
                                        <td>{{this.About}}</td>
                                        <td><img style="width: 50px;height:50px" src="/product-images/{{this.Images.[0].filename}}"
                                                alt=""></td>
                                        <td><span>
                                                <a href="/admin/edit-product/{{this._id}}" class="mr-4  btn btn-success" data-toggle="tooltip"
                                                    data-placement="top" title="Edit">
                                                    <i class="fa fa-pencil color-muted"></i>
                                                </a>
                                                <a href="/admin/deleteProducts/{{this._id}}" onclick="return confirm('are you sure')" class="btn btn-danger"  data-toggle="tooltip" data-placement="top"
                                                    title="Delete">
                                                    <i class="fa fa-close color-danger"></i>
                                                </a>
                                            </span>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
       <script>
       $(document).ready( function () {
  
  
          $('#productTable').wrap('<div id="hide" style="display:none"/>');
   
         $('#hide').css( 'display', 'block' );
     } );
      

         var table = $('#productTable').DataTable();
       </script>













